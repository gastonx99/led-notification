<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<GridPane fx:controller="se.dandel.lednotification.button.ButtonController"
          alignment="center" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" right="25" bottom="10" left="25"/>
    </padding>

    <!-- North -->
    <Circle fx:id="westnorthwest"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <Circle fx:id="northnorthwest"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Circle fx:id="north"
            radius="20" fill="black" stroke="black" strokeWidth="2"
            style="-fx-cursor: hand;"
            GridPane.rowIndex="0" GridPane.columnIndex="2"/>

    <Circle fx:id="northnortheast"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="0" GridPane.columnIndex="3"/>

    <Circle fx:id="eastnortheast"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <!-- West/East -->
    <Circle fx:id="west"
            radius="20" fill="transparent" stroke="black" strokeWidth="2"
            style="-fx-cursor: hand;"
            GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Circle fx:id="east"
            radius="20" fill="transparent" stroke="black" strokeWidth="2"
            style="-fx-cursor: hand;"
            GridPane.rowIndex="1" GridPane.columnIndex="4"/>

    <!-- South -->
    <Circle fx:id="westsouthwest"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Circle fx:id="southsouthwest"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Circle fx:id="south"
            radius="20" fill="transparent" stroke="black" strokeWidth="2"
            style="-fx-cursor: hand;"
            GridPane.rowIndex="2" GridPane.columnIndex="2"/>

    <Circle fx:id="southsoutheast"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="2" GridPane.columnIndex="3"/>

    <Circle fx:id="eastsoutheast"
            radius="20" fill="transparent" stroke="black" strokeWidth="1"
            GridPane.rowIndex="2" GridPane.columnIndex="4"/>

</GridPane>

